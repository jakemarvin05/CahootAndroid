<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".login">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="174dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/cahootlogo"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/login_email_input"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:hint="@string/login_email_input_text_view"
        android:textSize="16sp"
        android:paddingBottom="15dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_password_input"
        android:layout_below="@+id/login_email_input"
        android:layout_centerHorizontal="true"
        android:hint="@string/login_password_input_text_view"
        android:textSize="16dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/forgot_password_text_view"
        android:id="@+id/textView"
        android:layout_below="@+id/login_password_input"
        android:layout_alignLeft="@+id/login_password_input"
        android:layout_alignStart="@+id/login_password_input"
        android:layout_marginRight="30dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="4dp"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="160.5dp"
        android:layout_height="47dp"
        android:id="@+id/login_button"
        android:layout_below="@+id/login_password_input"
        android:layout_alignRight="@+id/login_password_input"
        android:layout_alignEnd="@+id/login_password_input"
        android:src="@drawable/loginbutton"
        android:layout_marginTop="8dp"
        android:onClick="jumpToMain"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="47dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/login_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/facebookloginbutton"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="47dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signupbutton"
        android:layout_marginTop="15dp" />

</RelativeLayout>
