<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.tester.Explore">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/korea_thumbnail"
        android:src="@drawable/korea"
        android:layout_below="@+id/japan_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="false"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/germany_thumbnail"
        android:src="@drawable/germany"
        android:layout_below="@+id/thainland_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxHeight="180dp"
        android:maxWidth="180dp"
        android:minHeight="180dp"
        android:minWidth="180dp"
        android:layout_alignParentLeft="false"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/japan_thumbnail"
        android:src="@drawable/japan"
        android:layout_below="@+id/america_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/thainland_thumbnail"
        android:src="@drawable/thailand"
        android:layout_below="@+id/france_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/america_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="false"
        android:src="@drawable/america"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/france_thumbnail"
        android:src="@drawable/france"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp" />

</RelativeLayout>
