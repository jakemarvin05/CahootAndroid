<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="test.tester.Explore">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/korea_thumbnail"
        android:src="@drawable/korea"
        android:scaleType="fitXY"
        android:layout_below="@+id/japan_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="180dp"
        android:maxWidth="180dp"
        android:minHeight="180dp"
        android:minWidth="180dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/germany_thumbnail"
        android:src="@drawable/germany"
        android:scaleType="fitXY"
        android:layout_below="@+id/thainland_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxHeight="180dp"
        android:maxWidth="180dp"
        android:minHeight="180dp"
        android:minWidth="180dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/japan_thumbnail"
        android:src="@drawable/japan"
        android:scaleType="fitXY"
        android:layout_below="@+id/america_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:maxHeight="180dp"
        android:maxWidth="180dp"
        android:minHeight="180dp"
        android:minWidth="180dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/thainland_thumbnail"
        android:src="@drawable/thailand"
        android:layout_below="@+id/france_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY"
        android:maxHeight="180dp"
        android:maxWidth="180dp"
        android:minHeight="180dp"
        android:minWidth="180dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/america_thumbnail"
        android:src="@drawable/america"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:maxHeight="180dp"
        android:maxWidth="180dp"
        android:minHeight="180dp"
        android:minWidth="180dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/france_thumbnail"
        android:src="@drawable/france"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true"
        android:maxHeight="180dp"
        android:maxWidth="180dp"
        android:minHeight="180dp"
        android:minWidth="180dp" />

</RelativeLayout>
