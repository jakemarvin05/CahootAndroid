<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="test.tester.Explore">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/korea_thumbnail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/korea"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:layout_toLeftOf="@+id/germany_thumbnail" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/germany_thumbnail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/germany"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/japan_thumbnail"
        android:layout_above="@+id/korea_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/japan"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:layout_toLeftOf="@+id/thainland_thumbnail" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/thainland_thumbnail"
        android:layout_above="@+id/germany_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/thailand"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/america_thumbnail"
        android:layout_above="@+id/japan_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/america"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:layout_toLeftOf="@+id/france_thumbnail" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/france_thumbnail"
        android:layout_above="@+id/thainland_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/france"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY" />

</RelativeLayout>
